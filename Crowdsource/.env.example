# Backend API Configuration
# Copy this file to .env and update with your settings

# Backend URL - Update with your server IP or domain
# For Android emulator: http://10.0.2.2:8000/api
# For real devices: http://YOUR_SERVER_IP:8000/api
# For production: https://api.yourdomain.com/api
EXPO_PUBLIC_BACKEND_URL=http://localhost:8000/api

# FTP Test Server Configuration (optional)
# Set EXPO_PUBLIC_FTP_ENABLED=false to disable real FTP tests
EXPO_PUBLIC_FTP_ENABLED=true
EXPO_PUBLIC_FTP_HOST=ftp.dlp-test.com
EXPO_PUBLIC_FTP_PORT=21
EXPO_PUBLIC_FTP_USERNAME=anonymous
EXPO_PUBLIC_FTP_PASSWORD=test@example.com
EXPO_PUBLIC_FTP_DOWNLOAD_PATH=/FTP_README.txt
EXPO_PUBLIC_FTP_UPLOAD_PATH=/cs-qoe-test-upload.txt

# Debug Mode
# Set to true for verbose logging
EXPO_PUBLIC_DEBUG=false

# App Version (used for metrics reporting)
EXPO_PUBLIC_APP_VERSION=1.0.0
